<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right|center_horizontal|left|center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F8C4"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="189dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4E004"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center_horizontal|top|center_vertical"
            android:text="Tip Calculator"
            android:textColor="#100B07"
            android:textSize="45sp" />

        <EditText
            android:id="@+id/etamount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:background="#F7F967"
            android:gravity="center_horizontal|left|center_vertical"
            android:hint="Enter the bill amount:"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp"
            android:textColor="#0B0808"
            android:textColorHint="#111010"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="73dp"
            android:layout_height="76dp"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20sp"
            android:background="#F7F967"
            android:gravity="center|center_vertical"
            android:paddingLeft="5dp"
            android:text="0%"
            android:textAllCaps="false"
            android:textColor="#0D0606"
            android:textSize="35sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seek2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="2dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:onClick="calctip"
            android:text="Calculate"
            android:textColor="#110909"
            app:backgroundTint="#FFC107" />

    </LinearLayout>
</LinearLayout>